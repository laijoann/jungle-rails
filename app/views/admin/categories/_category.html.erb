<tr>
  <td>
    <h4><%= category.name %></h4>
  </td>
  <td>
    <h4><%= category.products.size %></h4>
  </td>
  <td>
    <% if category.products.size <= 0 %>
      <%= link_to fa_icon('trash'), [:admin, category], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
    <% else %>
      <%= fa_icon('ban') %>
    <% end %>
  </td>
</tr>
